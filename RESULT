<!DOCTYPE html>
<html >
<head>

    <title>Quiz Result</title>
</head>
<body>
    <h1>Quiz Result</h1>

    <?php
    $score = 0;
    $level = $_POST['level'];

    $Easy_answers = array(
        "q1" => "H20",
        "q2" => "Lion",
        "q3" => "Paris",
        "q4" => "5",
        "q5" => "May",
        "q6" => "Down",
        "q7" => "4",
        "q8" => "True",
        "q9" => "Frue",
        "q10" => "True",
    );

    $Hard_answers = array(
        "q1" => "Canberra",
        "q2" => "Avocado",
        "q3" => "Iron",
        "q4" => "Sputnik 1",
        "q5" => "Canada",
        "q6" => "Alexander Fleming",
        "q7" => "Au Gold",
        "q8" => "True",
        "q9" => "False",
        "q10" => "True"

    );

    $answers = $level == 'Easy' ? $Easy_answers : $Hard_answers;

    foreach ($answers as $question => $correct_answer) {
        if (isset($_POST[$question]) && $_POST[$question] == $correct_answer) {
            $score++;
        }
    }

    echo "<p>Your total score is: $score/10</p>";
    ?>
</body>
</html>
